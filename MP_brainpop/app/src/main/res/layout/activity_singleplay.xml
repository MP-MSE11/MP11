<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.hskim7341.mp_test1.Singleplay">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/block1"
        android:layout_alignTop="@+id/block2"
        android:layout_marginRight="5dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/block2"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true" />
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/block3"
        android:layout_alignTop="@+id/block2"
        android:layout_marginLeft="5dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/block4"
        android:layout_alignTop="@+id/block5"
        android:layout_alignLeft="@+id/block1" />
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/block5"
        android:layout_below="@id/block2"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true" />
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/block6"
        android:layout_alignTop="@+id/block5"
        android:layout_alignRight="@+id/block3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/block7"
        android:layout_marginBottom="10dp"
        android:layout_alignTop="@+id/block8"
        android:layout_alignLeft="@+id/block1" />
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/block8"
        android:layout_below="@id/block5"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true" />
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/block9"
        android:layout_alignTop="@+id/block8"
        android:layout_alignRight="@+id/block3"
        android:layout_marginBottom="10dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ê²°"
        android:id="@+id/button"
        android:layout_below="@id/block9"
        android:layout_alignRight="@+id/block9"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/score_view"
        android:layout_below="@id/block7"
        android:layout_alignLeft="@+id/block7"
        android:layout_marginTop="10dp" />


    <Button android:text="Back"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="5dp"
        android:textSize="10sp"
        android:textAlignment="center"
        android:id="@+id/ghback_button" />


</RelativeLayout>
